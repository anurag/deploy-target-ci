{
  "extends": ["config:base"],
  "packageRules": [
    {
      "automerge": true,
      "rangeStrategy": "pin",
      "followTag": "canary",
      "matchUpdateTypes": [ "major", "minor", "patch", "pin" ]
    }
  ],
  "ignoreDeps": [
    "prop-types",
    "react",
    "react-dom",
    "autoprefixer",
    "postcss",
    "postcss-loader",
    "tailwindcss"
  ]
}

{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackageNames": [ "@redwoodjs/core", "@redwoodjs/web", "@redwoodjs/router", "@redwoodjs/forms", "@redwoodjs/auth", "@redwoodjs/api", "@redwoodjs/graphql-server" ],
      "followTag": "canary",
      "groupName": "RedwoodJS dependencies",
      "schedule": ["at any time"],
      "automerge": true
    }    
  ],
  "ignoreDeps": [
    "prop-types",
    "react",
    "react-dom",
    "autoprefixer",
    "postcss",
    "postcss-loader",
    "tailwindcss",
    "@vercel/nft",
    "archiver",
    "fs-extra",
    "serverless",
    "serverless-lift"
  ]
}

{
  "extends": ["config:base"],
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch", "pin", "major"],
      "matchPackagePatterns": ["@redwoodjs"],
      "rangeStrategy": "pin",
      "followTag": "canary"
    }
  ],
  "ignoreDeps": [
    "prop-types",
    "react",
    "react-dom",
    "autoprefixer",
    "postcss",
    "postcss-loader",
    "tailwindcss"
  ]
}
